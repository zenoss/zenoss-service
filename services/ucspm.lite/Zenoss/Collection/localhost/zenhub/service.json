{
    "Description": "Zenoss ZenHub",
    "Actions": {
        "debug": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} debug'",
        "stats": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} stats'"
    },
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zenhub run -c --logfileonly --monitor {{(parent .).Name}}\"",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660",
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}"
        },
        "/opt/zenoss/etc/zenhub.conf": {
            "FileName": "/opt/zenoss/etc/zenhub.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0664"
        }
    },
    "Endpoints": [
        {
            "Name": "mariadb",
            "Application": "zodb_.*",
            "Purpose": "import"
        },
        {
            "Name": "redis",
            "Application": "redis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "rabbitmq",
            "Application": "rabbitmq.*",
            "Purpose": "import"
        },
        {
            "Name": "zep",
            "Application": "zep",
            "PortNumber": 8084,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "zenhub",
            "Application": "{{(parent .).Name}}_zenhubPB",
            "PortNumber": 8789,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "zenhub_rpc",
            "Application": "{{(parent .).Name}}_zenhubXMLRpc",
            "PortNumber": 8081,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "controlplane_consumer",
            "Application": "controlplane_consumer",
            "PortNumber": 8444,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "zproxy",
            "Application": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "RAMCommitment": "256M",
    "CPUCommitment": 1,
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/opt/zenoss/log/zenhub.log",
            "type": "zenhub"
        },
        {
            "filters": [
                "supervisord"
            ],
            "path": "/opt/zenoss/log/audit.log",
            "type": "zenossaudit"
        }
    ],
    "Name": "zenhub",
    "Services": [],
    "Tags": [
        "daemon",
        "hub"
    ],
    "MonitoringProfile": {
        "MetricConfigs": [
            {
                "ID": "zenhub",
                "Name": "zenhub internal metrics",
                "Description": "zenhub internal metrics",
                "Metrics": [
                    {
                        "ID": "invalidations",
                        "Name": "Invalidations",
                        "Description": "Number of invalidations since daemon startup.",
                        "Counter": true
                    },
                    {
                        "ID": "services",
                        "Name": "Services",
                        "Description": "Please describe me.",
                        "Counter": false
                    },
                    {
                        "ID": "totalCallTime",
                        "Name": "Total Call Time",
                        "Description": "Please describe me.",
                        "Counter": false,
                        "Unit": "seconds"
                    },
                    {
                        "ID": "totalEvents",
                        "Name": "Total Events",
                        "Description": "Please describe me.",
                        "Counter": false
                    },
                    {
                        "ID": "totalTime",
                        "Name": "Total Time",
                        "Description": "Please describe me.",
                        "Counter": false,
                        "Unit": "seconds"
                    },
                    {
                        "ID": "workerItems",
                        "Name": "Worker Items",
                        "Description": "Please describe me.",
                        "Counter": false
                    },
                    {
                        "ID": "workListLength",
                        "Name": "Work List Length",
                        "Description": "Please describe me.",
                        "Counter": false
                    }
                ]
            }
        ]
    },
    "HealthChecks": {
        "running": {
            "Script": "pgrep -fu zenoss zenhub.py > /dev/null",
            "Interval": 5.0
        },
        "workers_running": {
            "Script": "pgrep -fu zenoss zenhubworker.py > /dev/null",
            "Interval": 5.0
        },
        "mariadb_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/mariadb_answering",
            "Interval": 10.0
        },
        "redis_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/redis_answering",
            "Interval": 5.0
        },
        "rabbit_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/rabbit_answering {{(getContext . \"global.conf.amqpuser\")}} {{(getContext . \"global.conf.amqppassword\")}}",
            "Interval": 10.0
        },
        "zep_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/zep_answering",
            "Interval": 10.0
        },
        "catalogservice_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/catalogservice_answering",
            "Interval": 10.0
        },
        "rpc_listening": {
            "Comment": "TODO: exercise API, if possible",
            "Script": "nmap -oG - -Pn -sS -p 8081 127.0.0.1 | grep -q 8081/open",
            "Interval": 10.0
        },
        "stable_workers": {
            "Script": "/opt/zenoss/bin/healthchecks/zenhub/stable_workers",
            "Interval": 5.0
        }
    },
    "Prereqs": [
        {
            "Name": "MariaDB connectivity",
            "Script": "su - zenoss -c '/opt/zenoss/bin/python /opt/zenoss/Products/ZenUtils/ZenDB.py --usedb zodb --execsql=\";\"'"
        },
        {
            "Name": "zencatalogservice response",
            "Script": "curl -s http://localhost:8085/zencatalogservice/api/1.0/catalog/acceptingRequests | grep -q True"
        }
    ],
    "Volumes": [
        {
            "Owner": "zenoss:zenoss",
            "ContainerPath": "/home/zenoss/.ssh",
            "Type": "",
            "ResourcePath": ".ssh",
            "Permission": "0755"
        },
        {
            "Owner": "zenoss:zenoss",
            "ResourcePath": "var-zenpacks",
            "ContainerPath": "/var/zenoss",
            "Permission": "0775"
        }
    ]
}
