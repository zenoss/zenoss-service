{
    "Actions": {
        "debug": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} debug'",
        "stats": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} stats'"
    },
    "CPUCommitment": 1,
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zenhub run -c --logfileonly --monitor {{(parent .).Name}}\"",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}",
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660"
        },
        "/opt/zenoss/etc/zenhub.conf": {
            "FileName": "/opt/zenoss/etc/zenhub.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0664"
        }
    },
    "Description": "Zenoss ZenHub",
    "Endpoints": [
        {
            "Application": "zodb_.*",
            "Name": "mariadb",
            "Purpose": "import"
        },
        {
            "Application": "memcached",
            "Name": "memcached",
            "PortNumber": 11211,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "redis",
            "Name": "redis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "rabbitmq.*",
            "Name": "rabbitmq",
            "Purpose": "import"
        },
        {
            "Application": "zep",
            "Name": "zep",
            "PortNumber": 8084,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "{{(parent .).Name}}_zenhubPB",
            "Name": "zenhub",
            "PortNumber": 8789,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "{{(parent .).Name}}_zenhubXMLRpc",
            "Name": "zenhub_rpc",
            "PortNumber": 8081,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "controlplane_consumer",
            "Name": "controlplane_consumer",
            "PortNumber": 8444,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "zproxy",
            "Name": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        }
    ],
    "HealthChecks": {
        "central_query_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/query_answering"
        },
        "mariadb_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/mariadb_answering"
        },
        "memcached_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/memcached_answering"
        },
        "metric_consumer_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/metrics_answering"
        },
        "rabbit_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/rabbit_answering {{(getContext . \"global.conf.amqpuser\")}} {{(getContext . \"global.conf.amqppassword\")}}"
        },
        "redis_answering": {
            "Interval": 5.0,
            "Script": "/opt/zenoss/bin/healthchecks/redis_answering"
        },
        "rpc_listening": {
            "Comment": "TODO: exercise API, if possible",
            "Interval": 10.0,
            "Script": "nmap -oG - -Pn -sS -p 8081 127.0.0.1 | grep -q 8081/open"
        },
        "running": {
            "Interval": 5.0,
            "Script": "pgrep -fu zenoss zenhub.py > /dev/null"
        },
        "solr_answering": {
            "Interval": 10.0,
            "Script": "curl -A 'Solr answering healthcheck' -s http://localhost:8983/solr/zenoss_model/admin/ping?wt=json | grep -q '\"status\":\"OK\"'"
        },
        "stable_workers": {
            "Interval": 5.0,
            "Script": "/opt/zenoss/bin/healthchecks/zenhub/stable_workers"
        },
        "workers_running": {
            "Interval": 5.0,
            "Script": "pgrep -fu zenoss zenhubworker.py > /dev/null"
        },
        "zep_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/zep_answering"
        }
    },
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "filters": [
                "pythondaemon"
            ],
            "path": "/opt/zenoss/log/zenhub.log",
            "type": "zenhub"
        },
        {
            "filters": [
                "supervisord"
            ],
            "isAudit": true,
            "path": "/opt/zenoss/log/audit.log",
            "type": "zenossaudit"
        }
    ],
    "MonitoringProfile": {
        "MetricConfigs": [
            {
                "Description": "zenhub internal metrics",
                "ID": "zenhub",
                "Metrics": [
                    {
                        "Counter": true,
                        "Description": "Number of invalidations since daemon startup.",
                        "ID": "invalidations",
                        "Name": "Invalidations"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "services",
                        "Name": "Services"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "totalCallTime",
                        "Name": "Total Call Time",
                        "Unit": "seconds"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "totalEvents",
                        "Name": "Total Events"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "totalTime",
                        "Name": "Total Time",
                        "Unit": "seconds"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "workerItems",
                        "Name": "Worker Items"
                    },
                    {
                        "Counter": false,
                        "Description": "Please describe me.",
                        "ID": "workListLength",
                        "Name": "Work List Length"
                    }
                ],
                "Name": "zenhub internal metrics"
            }
        ]
    },
    "Name": "zenhub",
    "Prereqs": [
        {
            "Name": "MariaDB connectivity",
            "Script": "su - zenoss -c '/opt/zenoss/bin/python /opt/zenoss/Products/ZenUtils/ZenDB.py --usedb zodb --execsql=\";\"'"
        },
        {
            "Name": "Solr answering",
            "Script": "curl -A 'Solr answering prereq' -s http://localhost:8983/solr/zenoss_model/admin/ping?wt=json | grep -q '\"status\":\"OK\"'"
        }
    ],
    "RAMCommitment": "1G",
    "Services": [],
    "StartLevel": 2,
    "Tags": [
        "daemon",
        "hub"
    ],
    "Volumes": [
        {
            "ContainerPath": "/home/zenoss/.ssh",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": ".ssh",
            "Type": ""
        },
        {
            "ContainerPath": "/var/zenoss",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "var-zenpacks"
        }
    ]
}
