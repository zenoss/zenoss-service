{
    "Actions": {
        "debug": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} debug'",
        "stats": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} stats'"
    },
    "CPUCommitment": 1,
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zensyslog run -c --logfileonly --monitor {{(parent .).Name}} \"",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}",
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660"
        },
        "/opt/zenoss/etc/zensyslog.conf": {
            "FileName": "/opt/zenoss/etc/zensyslog.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0664"
        }
    },
    "Description": "Collects and classifies syslog events",
    "Endpoints": [
        {
            "Application": "zproxy",
            "Name": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "{{(parent (parent .)).Name}}_zenhubPB",
            "Name": "zenhub",
            "PortNumber": 8789,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "{{(parent .).Name}}_redis",
            "Name": "CollectorRedis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "import_all"
        },
        {
            "Application": "controlplane_consumer",
            "Name": "controlplane_consumer",
            "PortNumber": 8444,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "AddressConfig": {
                "Port": 514,
                "Protocol": "udp"
            },
            "Application": "{{(parent .).Name}}_syslog",
            "Name": "syslog",
            "PortNumber": 514,
            "Protocol": "udp",
            "Purpose": "export"
        }
    ],
    "HealthChecks": {
        "listening": {
            "Interval": 10.0,
            "Script": "nmap -oG - -Pn -sU -p 514 127.0.0.1 | grep -q 'Ports: 514'"
        },
        "redis_answering": {
            "Interval": 5.0,
            "Script": "/opt/zenoss/bin/healthchecks/redis_answering"
        },
        "running": {
            "Interval": 5.0,
            "Script": "pgrep -fu zenoss zensyslog.py > /dev/null"
        },
        "zenhub_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/zenhub_answering"
        }
    },
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "max": 1,
        "min": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "LogTags": [
                {
                    "Name": "monitor",
                    "Value": "{{(parent .).Name}}"
                }
            ],
            "filters": [
                "pythondaemon"
            ],
            "path": "/opt/zenoss/log/zensyslog.log",
            "type": "zensyslog"
        }
    ],
    "MonitoringProfile": {
        "GraphConfigs": [
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "dataPoints",
                        "legend": "Data Points",
                        "metric": "dataPoints",
                        "metricSource": "zensyslog",
                        "name": "Data Points",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Number of datapoints collected.",
                "footer": false,
                "id": "dataPoints",
                "name": "Data Points",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Data Points"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "devices",
                        "legend": "Devices",
                        "metric": "devices",
                        "metricSource": "zensyslog",
                        "name": "Devices",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Number of devices.",
                "footer": false,
                "id": "devices",
                "name": "Devices",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Devices"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "events",
                        "legend": "Queued",
                        "metric": "events",
                        "metricSource": "zensyslog",
                        "name": "Events",
                        "rate": true,
                        "type": "line"
                    },
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "eventCount",
                        "legend": "Events",
                        "metric": "eventCount",
                        "metricSource": "zensyslog",
                        "name": "Event Count",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Events",
                "footer": false,
                "id": "events",
                "name": "Events",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Events"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "eventQueueLength",
                        "legend": "Event Queue Length",
                        "metric": "eventQueueLength",
                        "metricSource": "zensyslog",
                        "name": "Event Queue Length",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "The number of events pending to be flushed from a daemon's memory queue.",
                "footer": false,
                "id": "eventQueueLength",
                "name": "Event Queue Length",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Event Queue Length"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "missedRuns",
                        "legend": "Missed Runs",
                        "metric": "missedRuns",
                        "metricSource": "zensyslog",
                        "name": "Missed Runs",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Number of missed runs of tasks running on daemon.",
                "footer": false,
                "id": "missedRuns",
                "name": "Missed Runs",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Missed Runs"
            },
            {
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "queuedTasks",
                        "legend": "Queued Tasks",
                        "metric": "queuedTasks",
                        "metricSource": "zensyslog",
                        "name": "Queued Tasks",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "runningTasks",
                        "legend": "Running Tasks",
                        "metric": "runningTasks",
                        "metricSource": "zensyslog",
                        "name": "Running Tasks",
                        "rate": false,
                        "type": "line"
                    },
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "format": "%d",
                        "id": "taskCount",
                        "legend": "Task Count",
                        "metric": "taskCount",
                        "metricSource": "zensyslog",
                        "name": "Task Count",
                        "rate": false,
                        "type": "line"
                    }
                ],
                "description": "Number of queued, running, and total tasks.",
                "footer": false,
                "id": "tasks",
                "name": "Tasks",
                "range": {
                    "end": "0s-ago",
                    "start": "1h-ago"
                },
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": ""
            }
        ],
        "MetricConfigs": [
            {
                "Description": "zensyslog internal metrics",
                "ID": "zensyslog",
                "Metrics": [
                    {
                        "Counter": false,
                        "Description": "Number of datapoints collected.",
                        "ID": "dataPoints",
                        "Name": "Datapoints",
                        "Unit": "Points"
                    },
                    {
                        "Counter": false,
                        "Description": "Number of devices.",
                        "ID": "devices",
                        "Name": "Devices",
                        "Unit": "Count"
                    },
                    {
                        "Counter": false,
                        "Description": "Total number of events.",
                        "ID": "eventCount",
                        "Name": "Event Count",
                        "Unit": "Events"
                    },
                    {
                        "Counter": false,
                        "Description": "The number of events pending to be flushed from a daemon's memory queue.",
                        "ID": "eventQueueLength",
                        "Name": "Event Queue Length",
                        "Unit": "Events"
                    },
                    {
                        "Counter": false,
                        "Description": "Number of missed runs of tasks running on daemon.",
                        "ID": "missedRuns",
                        "Name": "Missed Runs",
                        "Unit": "Runs"
                    },
                    {
                        "Counter": false,
                        "Description": "Number of tasks scheduled to be run, but are not running yet.",
                        "ID": "queuedTasks",
                        "Name": "Queued Tasks",
                        "Unit": "Tasks"
                    },
                    {
                        "Counter": false,
                        "Description": "Number of currently running tasks.",
                        "ID": "runningTasks",
                        "Name": "Running Tasks",
                        "Unit": "Tasks"
                    },
                    {
                        "Counter": false,
                        "Description": "Total number of tasks.",
                        "ID": "taskCount",
                        "Name": "Task Count",
                        "Unit": "Tasks"
                    },
                    {
                        "Counter": true,
                        "Descritption": "Number of events sent by a daemon to the raw event queue.",
                        "ID": "events",
                        "Name": "Events",
                        "Unit": "Events"
                    }
                ],
                "Name": "zensyslog internal metrics"
            }
        ],
        "ThresholdConfigs": [
            {
                "DataPoints": [
                    "missedRuns"
                ],
                "Description": "High number of missed runs",
                "EventTags": {
                    "EventClass": "/App/Zenoss",
                    "Explanation": "This service is missing runs",
                    "Resolution": "Add more collectors",
                    "Severity": 3
                },
                "ID": "missedRuns.high",
                "MetricSource": "zensyslog",
                "Name": "Missed Runs High",
                "Threshold": {
                    "Max": "5",
                    "Min": ""
                },
                "Type": "MinMax"
            }
        ]
    },
    "Name": "zensyslog",
    "RAMCommitment": "256M",
    "Services": [],
    "Tags": [
        "daemon",
        "collector"
    ],
    "Volumes": [
        {
            "ContainerPath": "/home/zenoss/.ssh",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": ".ssh",
            "Type": ""
        },
        {
            "ContainerPath": "/var/zenoss",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "var-zenpacks"
        }
    ]
}
