{
    "CPUCommitment": 1,
    "Command": "/bin/sh -c \"{{ if eq .InstanceID 0 }} export CREATE_TABLES=1;{{ end }} /opt/opentsdb/start-opentsdb.sh {{with $zks := (child (child (parent .) \"HBase\") \"ZooKeeper\").Instances }}{{ range (each $zks) }}localhost:{{plus 2181 .}}{{if ne (plus 1 .) $zks}},{{end}}{{end}}{{end}}\"",
    "ConfigFiles": {
        "/opt/opentsdb/src/logback.xml": {
            "FileName": "/opt/opentsdb/src/logback.xml",
            "Owner": "root:root",
            "Permissions": "0644"
        },
        "/opt/zenoss/etc/opentsdb/opentsdb.conf": {
            "FileName": "/opt/zenoss/etc/opentsdb/opentsdb.conf",
            "Owner": "root:root",
            "Permissions": "0644"
        }
    },
    "Description": "OpenTSDB server",
    "Endpoints": [
        {
            "Application": "opentsdb-reader",
            "Name": "opentsdb-reader",
            "PortNumber": 4242,
            "Protocol": "tcp",
            "Purpose": "export",
            "VHostList": [
                {
                    "Enabled": false,
                    "Name": "opentsdb"
                }
            ]
        },
        {
            "Application": "opentsdb-writer",
            "Name": "opentsdb-writer",
            "PortNumber": 4242,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "zookeeper-client",
            "Name": "zookeeper-client",
            "PortNumber": 2181,
            "Protocol": "tcp",
            "Purpose": "import_all"
        },
        {
            "Application": "hbase-master-.*",
            "Name": "hbase-master",
            "Purpose": "import"
        },
        {
            "Application": "hbase-regionserver",
            "Name": "hbase-regionserver",
            "PortNumber": 60200,
            "Protocol": "tcp",
            "Purpose": "import_all"
        }
    ],
    "Environment": [
        "TSDB_JAVA_MEM_MB=-Xmx{{bytesToMB .RAMCommitment}}m"
    ],
    "HealthChecks": {
        "answering": {
            "Interval": 30.0,
            "Script": "wget --timeout=3 --tries=1 -q -O - http://localhost:4242/api/stats"
        },
        "hbase_answering": {
            "Interval": 10.0,
            "Script": "curl -A 'HMaster rest_answering healthcheck' -o /dev/null -f -s http://localhost:61000/status/cluster"
        }
    },
    "ImageID": "zenoss/opentsdb:xx",
    "Instances": {
        "min": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "filters": [
                "hbasedaemon"
            ],
            "path": "/var/log/opentsdb/opentsdb.log",
            "type": "opentsdb-reader"
        }
    ],
    "Name": "opentsdb-reader",
    "Prereqs": [
        {
            "Name": "HBase Regionservers up",
            "Script": "{{with $rss := (child (child (parent .) \"HBase\") \"RegionServer\").Instances }}wget -q -O- http://localhost:61000/status/cluster | grep '{{$rss}} live servers'{{end}}"
        }
    ],
    "RAMCommitment": "256M",
    "Services": [],
    "StartLevel": 3,
    "Tags": [
        "daemon"
    ]
}
