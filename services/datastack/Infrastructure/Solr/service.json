{
    "CPUCommitment": 2,
    "Command": "setuser solr /opt/solr/zenoss/bin/start-solr -cloud",
    "ConfigFiles": {
        "/opt/solr/server/solr/solr.xml": {
            "FileName": "/opt/solr/server/solr/solr.xml",
            "Owner": "root:root",
            "Permissions": "0664"
        },
        "/opt/solr/zenoss/etc/solr.in.sh": {
            "Filename": "/opt/solr/zenoss/etc/solr.in.sh",
            "Owner": "root:root",
            "Permissions": "0664"
        }
    },
    "Description": "Solr Cloud",
    "Endpoints": [
        {
            "Application": "solr",
            "Name": "solr",
            "PortNumber": 8983,
            "Protocol": "tcp",
            "Purpose": "export",
            "Vhosts": [
                "solr"
            ]
        }
    ],
    "HealthChecks": {
        "answering": {
            "Interval": 10.0,
            "Script": "curl -sI http://localhost:8983/solr/admin/cores | grep -q 200"
        }
    },
    "ImageID": "zenoss/solr:0.0.3-dev",
    "Instances": {
        "Default": 1,
        "Min": 1
    },
    "Launch": "auto",
    "LogConfigs": [],
    "Name": "Solr",
    "Prereqs": [
    ],
    "RAMCommitment": "1G",
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "ContainerPath": "/opt/solr/server/logs",
            "Owner": "solr:solr",
            "Permission": "0750",
            "ResourcePath": "solr-logs-{{.InstanceID}}"
        },
        {
            "ContainerPath": "/var/solr/data",
            "Owner": "solr:solr",
            "Permission": "0750",
            "ResourcePath": "solr-{{.InstanceID}}"
        }
    ]
}
